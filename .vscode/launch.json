    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Run Tests",
            "type": "dart",
            "request": "launch",
            "program": "./test/"
        },
        {
            "name": "Run (example)",
            "cwd": "example",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Run (example) Web",
            "cwd": "example",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-port=50000",
                "--web-enable-expression-evaluation",
                "--web-browser-flag=--disable-web-security",
            ]
        },
    ]
}